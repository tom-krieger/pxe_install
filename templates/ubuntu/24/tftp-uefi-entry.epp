set timeout=2

menuentry "Ubuntu kickstart for ${net_default_ip}" {
  set gfxpayload=keep
  echo "Ubuntu kickstart for ${net_default_ip}"
  echo "Loading kernel ..."
  linux   <%= $prefix %>/linux --- iso-url=<%= $ksurl %> priority=critical vga=788 interface=<%= $ksdevice %> auto=true log_host=<%= $loghost %> log_port=<%= $logport %> puppetenv=<%= $puppetenv %> role=<%= $puppetrole %> dc=<%= $datacenter %> <%= $foreman %> quiet
  echo "Loading initrd ..."
  initrd  <%= $prefix %>/initrd
}
